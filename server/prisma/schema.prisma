generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id    String @id @default(cuid())
  front String
  back  String

  deck   Deck   @relation(fields: [deckId], references: [id])
  deckId String
}

model Deck {
  id   String @id @default(cuid())
  name String

  cards Card[]
}

model User {
  id        String @id @default(cuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
}
